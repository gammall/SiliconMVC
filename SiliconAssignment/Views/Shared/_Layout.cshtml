
@inject SignInManager<UserEntity> _signInManager;


<!DOCTYPE html>
<html lang="sv-se">
<head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width", initial-scale="1.0">
        <script src="https://kit.fontawesome.com/1484a61b02.js" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <title>@ViewData["Title"]</title>
</head>
<body>

    <header>
        <div class="container">
            <a asp-controller="Home" asp-action="Index" id="logo"><img src="~/images/logo/solid.svg"></a>
            <div id="menu">
                <nav>
                    @if (_signInManager.IsSignedIn(User))
                    {
                        <a asp-controller="Home" asp-action="Index">Overview</a>
                        <a asp-controller="Courses" asp-action="Index">Courses</a>
                        <a asp-controller="Home" asp-action="Index">Contact</a>
                    }
                    else
                    {
                        <a asp-controller="Home" asp-action="Index">Overview</a>
                        <a asp-controller="Home" asp-action="Index">Features</a>
                        <a asp-controller="Home" asp-action="Index">Contact</a>
                    }
                </nav>
            </div>

            <div class="btn-switch">
                <label>Light</label>
                <label for="switch-mode" class="switch">
                    <input type="checkbox" id="switch-mode" />
                    <div class="slider round"></div>
                </label>
                <label>Dark</label>
            </div>

            <div class="account-buttons">
                @if (_signInManager.IsSignedIn(User))
                {
                    <a class="btn-gray" asp-controller="Account" asp-action="Account"><i class="fa-regular fa-user"></i><span>Account</span></a>
                    <a class="btn-theme" asp-controller="Auth" asp-action="SignOut"><i class="fa-regular fa-user"></i><span>Sign Out</span></a>
                }
                else
                {
                    <a class="btn-gray" asp-controller="Auth" asp-action="SignIn"><i class="fa-regular fa-user"></i><span>Sign In</span></a>
                    <a class="btn-theme" asp-controller="Auth" asp-action="SignUp"><i class="fa-regular fa-user"></i><span>Sign Up</span></a>
                }
            </div>
        </div>
    </header>

    @RenderBody()

    <footer>
        <div class="container">
            <div class="social-media">
                <a class="btn-social" href="#"><i class="fa-brands fa-facebook"></i></a>
                <a class="btn-social" href="#"><i class="fa-brands fa-square-x-twitter"></i></a>
                <a class="btn-social" href="#"><i class="fa-brands fa-instagram"></i></a>
                <a class="btn-social" href="#"><i class="fa-brands fa-youtube"></i></a>
            </div>
            <p>&copy; 2024 Silicon. All rights reserved Lorem ipsum dolor sit amet consectetur adipisicing elit. Distinctio corrupti ipsum natus mollitia voluptas, alias iste deserunt! Magni, porro. Nihil?</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>